@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<style>
    .register-container {
        max-width: 500px;
        margin: 0 auto;
        padding: 2rem 0;
    }

    .register-card {
        background: var(--dark-card);
        border: 1px solid var(--border-color);
        border-radius: 20px;
        padding: 3rem;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
    }

    .register-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .register-title {
        font-size: 2rem;
        font-weight: 800;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
    }

    .register-subtitle {
        color: var(--text-secondary);
        font-size: 0.95rem;
    }

    .form-floating {
        margin-bottom: 1.5rem;
    }

    .form-control {
        background: rgba(15, 23, 42, 0.5);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        color: var(--text-primary);
        padding: 1rem 1rem;
        height: auto;
        transition: all 0.3s ease;
    }

        .form-control:focus {
            background: rgba(15, 23, 42, 0.7);
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
            color: var(--text-primary);
        }

    .form-floating > label {
        color: var(--text-secondary);
        padding: 1rem 1rem;
    }

    .form-control:focus ~ label,
    .form-control:not(:placeholder-shown) ~ label {
        color: var(--primary);
    }

    .btn-register {
        width: 100%;
        padding: 1rem;
        background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
        border: none;
        border-radius: 12px;
        color: white;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 1rem;
    }

        .btn-register:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(99, 102, 241, 0.4);
        }

    .divider {
        display: flex;
        align-items: center;
        text-align: center;
        margin: 2rem 0;
    }

        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            border-bottom: 1px solid var(--border-color);
        }

        .divider span {
            padding: 0 1rem;
            color: var(--text-secondary);
            font-size: 0.9rem;
        }

    .external-auth-buttons {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .btn-external {
        width: 100%;
        padding: 0.9rem;
        border: 1px solid var(--border-color);
        border-radius: 12px;
        background: rgba(255, 255, 255, 0.05);
        color: var(--text-primary);
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.7rem;
    }

        .btn-external:hover {
            background: rgba(255, 255, 255, 0.1);
            border-color: var(--primary);
            transform: translateY(-2px);
        }

    .btn-google {
        border-color: #db4437;
    }

        .btn-google:hover {
            border-color: #db4437;
            background: rgba(219, 68, 55, 0.1);
        }

    .btn-facebook {
        border-color: #1877f2;
    }

        .btn-facebook:hover {
            border-color: #1877f2;
            background: rgba(24, 119, 242, 0.1);
        }

    .btn-github {
        border-color: #333;
    }

        .btn-github:hover {
            border-color: #666;
            background: rgba(255, 255, 255, 0.05);
        }

    .login-redirect {
        text-align: center;
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 1px solid var(--border-color);
    }

        .login-redirect p {
            color: var(--text-secondary);
            margin-bottom: 0.5rem;
        }

        .login-redirect a {
            color: var(--primary);
            font-weight: 600;
            text-decoration: none;
            transition: color 0.3s ease;
        }

            .login-redirect a:hover {
                color: var(--secondary);
                text-decoration: underline;
            }

    .text-danger {
        color: #ef4444;
        font-size: 0.85rem;
        margin-top: 0.25rem;
    }

    .validation-summary {
        background: rgba(239, 68, 68, 0.1);
        border: 1px solid #ef4444;
        border-radius: 12px;
        padding: 1rem;
        margin-bottom: 1.5rem;
    }

        .validation-summary ul {
            margin: 0;
            padding-left: 1.2rem;
            color: #ef4444;
        }

    @@media (max-width: 576px) {
        .register-card {
            padding: 2rem 1.5rem;
        }

        .register-title {
            font-size: 1.75rem;
        }
    }
</style>

<div class="register-container">
    <div class="register-card">
        <div class="register-header">
            <h1 class="register-title">Create Account</h1>
            <p class="register-subtitle">Join ShopHub and start shopping today</p>
        </div>

<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div asp-validation-summary="ModelOnly" class="validation-summary" role="alert"></div>

    <!-- Username -->
    <div class="form-floating mb-3">
        <input asp-for="Input.UserName" class="form-control"
               autocomplete="username" aria-required="true"
               placeholder="username" />
        <label asp-for="Input.UserName">Username</label>
        <span asp-validation-for="Input.UserName" class="text-danger"></span>
    </div>

    <!-- Email -->
    <div class="form-floating mb-3">
        <input asp-for="Input.Email" class="form-control"
               autocomplete="email" aria-required="true"
               placeholder="name@example.com" />
        <label asp-for="Input.Email">Email Address</label>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <!-- Password -->
    <div class="form-floating mb-3">
        <input asp-for="Input.Password" class="form-control"
               autocomplete="new-password" aria-required="true"
               placeholder="password" type="password" />
        <label asp-for="Input.Password">Password</label>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
            <button id="registerSubmit" type="submit" class="btn-register">
                <i class="fas fa-user-plus"></i> Create Account
            </button>
        </form>

        <div class="divider">
            <span>OR CONTINUE WITH</span>
        </div>

        <div class="external-auth-buttons">
            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <button type="submit" class="btn-external btn-google" name="provider" value="Google">
                    <i class="fab fa-google"></i> Continue with Google
                </button>
            </form>
        </div>

        <div class="login-redirect">
            <p>Already have an account?</p>
            <a asp-page="/Account/Login" asp-route-returnUrl="@Model.ReturnUrl">
                <i class="fas fa-sign-in-alt"></i> Sign in here
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
