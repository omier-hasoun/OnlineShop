@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm email";
}

<h1>@ViewData["Title"]</h1>
<partial name="_StatusMessage" model="Model.StatusMessage" />
@if (!string.IsNullOrEmpty(Model.StatusMessage))
{
    <script>
        setTimeout(function () {
            window.location.href = '/';
        }, 4000);
    </script>
}
